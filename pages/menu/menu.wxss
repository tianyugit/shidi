.list-img{
 width: 50rpx;
 height: 50rpx
}

.list-item{
  display: flex;
  padding: 40rpx;
  align-items: center;
  flex-direction: row;

}

.body {
  padding-left: 30rpx;
  padding-right: 30rpx;
  flex: 1;
  overflow: auto;
}

.head{
   background-color: whitesmoke;
}
.title {
 
  width:350rpx;
  height: 150rpx
}
.description {
  display: block;
  margin-top: 30rpx;
  color: #888;
  font-size: 28rpx;
}

.item {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #FBF9FE;
  overflow: hidden;
  border-radius: 4rpx;
  cursor: pointer;
}
.item-info {
  display: flex;
  align-items: center;
  flex-direction: row;
}
.item-name {
  flex: 1;
  margin-left: 20rpx
}