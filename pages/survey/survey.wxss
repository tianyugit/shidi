/* pages/survey/survey.wxss */
.web{
  width: 100%;
  height: 1500rpx;
}

.myMap{
  width: 100%;
  height: 1080rpx;
}

.cover{
  position: relative;
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
  display: flex;
  margin-left: 20px;
}

.cover-image{
  width: 40rpx;
  height: 40rpx;
}

.cover-marker{
   width: 130rpx;
  height: 75rpx
}

.mylocation{
  width: 100%;
  height: 20px;
  font-size:15px 
}
.body{
  display: flex;
   flex-direction: column;
}
.content{
  width: 100%;
  height: 1075rpx;
  flex:1;
}
.foot{
  background-image:url("data:image/png;base64,");
  width: 100%;
  height: 140rpx;
  margin-bottom: 1px;
  flex:1;
  display: flex;
  flex-direction: row;
}

.mapPic{
  width: 100rpx;
  height: 100rpx;
}

.myText{
 font-size: 25rpx;
 color: #ffffff;
 
}

.myItem{
   display: flex;
   flex-direction: column;
   flex: 1;
   align-items: center;
}

.box{
  width: 100%;
  height: 60rpx;
  display: flex;
  text-align:center;
  align-items: center;
}

.boxbox-hover{
  width: 100%;
  height: 40rpx;
  display: flex;
  text-align:center;
  align-items: center;
  opacity: 0.9; /* 透明度变化 */
  background-color: #ffc343;
}

.img-box{
  width: 40rpx;
  height: 40rpx;
  margin-left: 10px;
  margin-top: 5px;
}

.text-box{
  font-size: 20px;
  margin-left: 10px;
  display: flex;
   flex-direction: column;
   align-items: center;
  margin-bottom: 2px;
}

.line{
   background-color: #bdbdbd;
    width: 100%;
    height: 1px
}
.line2{
 width: 5rpx;
height: 140rpx ;
background-color: #ffffff;
}


.addpic{
  width: 100rpx;
  height: 100rpx;
  margin-left: 10px;
}

.addpic_text{
  width: 100rpx;
  font-size: 12px;
}

.addPics{
  width: 100%;
  display: flex;
  flex-direction: row;
  white-space: pre-wrap;
}

.block{
  width: 100%;
   /*下面三行代码支持换行*/
  display: flex;
 flex-flow: row wrap;  
align-content: space-around;
}
.block_nei{
  display: flex;
  flex-direction: column;
}

.music{
  width: 50rpx;
  height: 50rpx;
}

.music-block{
  display: flex;
  flex-direction: row;
}

.button{
  position:absolute;
  width: 180rpx;
  height: 60rpx;
  font-size: 15px;
  text-align: center;
  bottom: 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.form-foot{
  float: left;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
/* 提交调查模块 */
.textarea{
  width: 100%;
  height: 500rpx;
  border:solid 1px #ff9408;
}

.sur_text{
  width: 100%;
  height: 40rpx;
  font-size: 14px;
  background-color: #a7a7a7;
}

.hide{
display: none;
}

.show{
display: block;
}
